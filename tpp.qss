}

#MainWindow QPushButton
{
color:rgb(253,236,208);
background-color: qlineargradient(spread:reflect, x1:0, y1:0, x2:1, y2:1,
                        stop:0 rgb(165, 165, 165), stop:1 rgb(66,78,105));
border:6px groove rgb(59, 59, 59);
border-radius:10px;
font: 20pt "Windows";
}

#MainWindow QPushButton:pressed
{
color:rgb(253,236,208);
background-color: qlineargradient(spread:reflect, x1:0, y1:0, x2:1, y2:1,
                        stop:0 rgb(165, 165, 165), stop:1 rgb(66,78,105));
border:8px groove rgb(59, 59, 59);
border-radius:10px;
font: 20pt "Windows";
font-style: oblique;
}

#MainWindow QPushButton:checked
{
color:rgb(253,236,208);
background-color: qlineargradient(spread:reflect, x1:0, y1:0, x2:1, y2:1,
                        stop:0 rgba(188,208,197, 255), stop:1 rgba(66,168,129, 255));
border:8px groove rgb(59, 59, 59);
border-radius:10px;
font: 20pt "Windows";
}
