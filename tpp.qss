/********************大窗体开始********************/
QWidget:focus
{
/* 避免获得焦点的部件产生虚框
*/
outline: none;
}

QGroupBox {
    background: qlineargradient(spread:reflect, x1:1, y1:1, x2:0, y2:0,
                stop:0 rgba(255,255,255, 0), stop:1 rgba(71, 154, 199, 70));
    border: 0px solid gray;
    border-radius: 9px;
    margin-top: 1em;
}

QGroupBox::title {
    color: yellow;
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 3px 0 3px;
}



QMessageBox
{
background: qlineargradient(spread:reflect, x1:0, y1:1, x2:0, y2:-0.1,
                stop:0 rgba(255, 192, 151, 255), stop:1 rgba(239,97,0, 255));
}


